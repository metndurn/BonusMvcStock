@using BonusMvcStock.Models.Entity @*burada istediğim alan neyse onu liste olarak alıyoruz*@
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Urunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>
        Ürün Adı:@Html.TextBox("Urun")
        <input type="submit" value="Ara" class="btn btn-primary" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN ADI</th>
        <th>ÜRÜN MARKASI</th>
        <th>ÜRÜN STOK ADETİ</th>
        <th>ÜRÜN ALIŞ FİYATI</th>
        <th>ÜRÜN SATIŞ FİYATI</th>
        <th>ÜRÜN KATEGORİSİ</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var urun in Model)
    {
        <tr>
            <td>@urun.Id</td>
            <td>@urun.UrunAd</td>
            <td>@urun.UrunMarka</td>
            <td>@urun.UrunStok</td>
            <td>@urun.UrunAlisFiyati</td>
            <td>@urun.UrunSatisFiyati</td>
            <td>@urun.Kategoriler.KategoriAd</td>
            <td><a href="/Urun/UrunSil/@urun.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@urun.Id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, urunsayfa => Url.Action("Index", new { urunsayfa }))
<br />
<a href="/Urun/YeniUrun/" class="btn btn-primary">Yeni Ürün Ekle</a>

